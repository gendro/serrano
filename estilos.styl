#intro
	background white
	color #333
	display block
	padding 0 0 1em 0
	position relative
	z-index 1
	h2
		text-align center
		padding 1em 0
		#camino
			font-weight bold
			letter-spacing 0.3em
		#ch-que
			font-size 0.75em
	.intro-text
		padding 1em
		p
			font-size 1.2em
			margin 0 auto
			text-align center
			width 70%
		#esf
			font-size 2.3em
			font-weight 500
			font-style italic
			padding 0.5em 0 0 0
			

#about
	background #333
	padding-top 1em
	position relative
	z-index 1
	h3
		background rojo
		display inline-block
		padding 0.5em 1em 0.5em 2em
		text-align center
		:first-child
			font-weight bold
			font-size 2em
	article
		padding 1.5em 0 2em 0
		max-width 600px
		p
			text-align justify
			padding 0.5em 1em 0em 3em
	#about-img
		float right
		margin 0 2em 0 1.5em
		max-width 500px
		img
			width 100%



.trabajo
	background rojo
	padding 1em 0
	position relative
	z-index 1
	#tr-tit
		text-align center
		div
			display inline-block
			text-align left
			:last-child
				font-size 3em
				font-weight 900
				
	article
		padding 2em 0
		p
			margin 0 auto
			text-align center
			width 70%


	#rectores,#transversales
		.ejes
			background white
			color #333
			display inline-block
			padding 0.5em 2em
			text-align right
			h3
				font-weight 600
				font-size 1.2em
				letter-spacing 0.2em
		
		ul
			// background teal
			display flex
			flex-wrap wrap
			justify-content space-around
			max-width 1200px
			padding 0
			margin 2em auto
			list-style-type none
			overflow hidden
			li
				height 200px
				margin 0 100px
				text-align center
				width 200px
				.proj
					cursor pointer
					p
						font-size 0.7em



.proyectos
	background rgba(250,250,250,0.95)
	bottom 0
	display none
	left 0
	overflow-y auto
	position fixed
	right 0
	top 0
	width 102%
	z-index 99
	
	.barra
		background #101010
		cursor pointer
		height 40px
		position fixed
		top 0
		width 100%
		z-index 100
		p
			padding 0.5em 0 0 1em
		img
			position absolute
			top 0
			right 1em
			float right
	
	.proj-tit-cont-main
		margin 0 auto
		position relative
		overflow-x hidden
		overflow-y auto
		width 100%
		// :first-child
		// 	padding 0 0 0 1em
		h3
			// background url("imagenes/proyectos/gobierno/gobierno.jpg")	
			background-size cover
			padding-top 2.5em
			text-align center
			text-shadow 2px 2px 2px black
			height 300px
			:first-child
				font-size 3em
				font-weight 600
			:last-child
				font-weight 400
				

	.proj-cont-non
		background verde
		overflow hidden
		margin 2em 2em 1em auto
		max-width 1100px
		.proj-img
			float right
			margin 0 0 0 3em
			max-width 400px
			img
				width 100%
		.proj-tit
			h4
				font-weight 600
				padding 0 0 0 0.5em
		.proj-txt
			article
				margin 1em 2em 1em 1em
				text-align justify
				
	.proj-cont-par
		background rojo
		overflow hidden
		margin auto 2em 1em 2em
		max-width 1100px
		.proj-img
			float left
			margin 0 3em 0 0
			max-width 400px
			img
				width 100%
		.proj-tit
			h4
				font-weight 600
				padding 0 0 0 0.5em
		.proj-txt
			article
				margin 1em 2em 1em 1em
				text-align justify
		
	
.compromiso
	background white
	color #333
	display block
	padding 0 0 3em 0
	position relative
	z-index 1
	img
		width 100%
	h2
		text-align center
		padding 1em 0
		#comp-tit
			font-weight bold
			letter-spacing 0.3em
	.comp-text
		padding 1em
		p
			font-size 1.2em
			margin 0 auto
			text-align center
			width 70%
			
	.cont-qbcc
		.que, .como
			display inline-block
			vertical-align top
			width 49%
			img
				width 50%
			
		.que
			img
				float right
				margin-left 1em
			#que-tit
				font-weight 600
			.que-text
				padding 0 1em
				text-align right
		.como
			img
				float left
				margin-right 1em
			#como-tit
				font-weight 600
			.como-text
				padding 0 1em
				// text-align justify
					
footer
	background verde
	padding 0 0 2em 0
	position relative
	z-index 2
	text-align center
	#ya
		font-weight bold
		padding-top 2em
	#peticion
		margin 0 auto
		width 60%



.txt-rojo
	color rojo				

@media screen and (max-width: 780px)

	body
		font-size 16px
				
	header
		text-shadow 2px 2px black	
	#portada
		background-position right
		text-align center
		.cop
			left 8%
			width 85%
			

	#about
		article
			padding 1em
			p
				padding 0
				

	.compromiso
		.cont-qbcc
			.que, .como
				display block
				overflow hidden
				width 100%
		
	

@media screen and (max-width: 350px)

	body
		font-size 14px

		
	































