*
	box-sizing border-box
	
html
	height 100%
	
body
	background #333
	font-family "Lato"
	font-size 18px
	color white
	height 100%
	
h1,h2,h3,h4,p
	margin 0
	padding 0
	font-weight 300

a
	color white
	text-decoration none
	

header
	display block
	height 80px
	padding 2em
	position fixed
	width 100%
	// text-shadow 1px 1px 2px	 black
	h1
		display block
		font-size 3em
		text-align center
		.tit-main
			font-weight 600
			letter-spacing 22px
		.sub-tit-main
			font-weight 400
			font-size 0.7em
	.chih
		text-align center
		

	.serrano-tit
		display inline-block
		margin-top 100px
		
		p
			text-align center
		
		#enrique
			font-size 3em
			font-weight 300
			letter-spacing 18px
		#serrano
			font-size 4em
			font-weight 800

				
		
		


